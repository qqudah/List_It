@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    /* Centering the entire page */
    html, body {
        height: 100%;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #FFF2F2;
    }

    /* Main container (Taller for spacing) */
    .container-box {
        background-color: #A9B5DF;
        border-radius: 15px;
        padding: 120px 25px 25px;
        width: 750px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: visible;
    }

    /* List IT Header (Larger) */
    .header {
        background-color: #7886C7;
        color: white;
        padding: 25px;
        border-radius: 10px;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        position: absolute;
        top: -50px;
        left: 50%;
        transform: translateX(-50%);
        width: 85%; /* Bigger than Register */
        z-index: 1; /* BEHIND Register */
    }

    /* Register container (Below in Y-axis, Above in Z-axis) */
    .register-container {
        position: absolute;
        top: 20px; /* Moves it down on Y-Axis */
        left: 50%;
        transform: translateX(-50%);
        width: 65%; /* Smaller than List IT */
        z-index: 2; /* ABOVE List IT */
    }

    /* Register badge */
    .register-badge {
        background-color: #FFF2F2;
        color: black;
        padding: 15px 30px;
        font-size: 24px;
        font-weight: bold;
        border-radius: 10px;
        box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.2);
        text-align: center;
        position: relative;
    }

    /* Label colors */
    .form-label {
        color: white;
    }

    /* Black divider (Not touching edges) */
    .divider {
        width: 2px;
        background-color: black;
        height: 80px;
        margin: auto;
    }

    /* Centered button */
    .btn-custom {
        background-color: #7886C7 !important;
        color: white;
        border: none;
        padding: 10px 30px;
        border-radius: 5px;
        display: block;
        margin: 20px auto 0;
    }

        .btn-custom:hover {
            background-color: #5F72A1 !important;
        }
</style>

<!-- Main Container -->
<div class="container-box">
    <!-- Register Container (Now correctly positioned) -->
    <div class="register-container">
        <div class="register-badge">Register</div>
    </div>

    <!-- List IT Header (Larger) -->
    <div class="header">List IT</div>

    <!-- Form -->
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="row justify-content-center align-items-center">
            <!-- Left Side - Email -->
            <div class="col-md-5">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <!-- Divider (Now NOT touching edges) -->
            <div class="col-md-2 text-center">
                <div class="divider"></div>
            </div>

            <!-- Right Side - Passwords -->
            <div class="col-md-5">
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Enter password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Centered Button (Now in the correct color) -->
        <div class="text-center mt-3">
            <button id="registerSubmit" type="submit" class="btn btn-custom">Register</button>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    /* Centering the entire page */
    html, body {
        height: 100%;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #FFF2F2;
    }

    /* Main container */
    .container-box {
        background-color: #A9B5DF;
        border-radius: 15px;
        padding: 120px 25px 25px;
        width: 750px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: visible;
    }

    /* List IT Header (Larger) */
    .header {
        background-color: #7886C7;
        color: white;
        padding: 25px;
        border-radius: 10px;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        position: absolute;
        top: -50px;
        left: 50%;
        transform: translateX(-50%);
        width: 85%;
        z-index: 1;
    }

    /* Login container (Positioned like Register Page) */
    .login-container {
        position: absolute;
        top: 20px; /* Adjusted for spacing */
        left: 50%;
        transform: translateX(-50%);
        width: 65%;
        z-index: 2;
    }

    /* Login badge */
    .login-badge {
        background-color: #FFF2F2;
        color: black;
        padding: 15px 30px;
        font-size: 24px;
        font-weight: bold;
        border-radius: 10px;
        box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.2);
        text-align: center;
        position: relative;
    }

    /* Form Label Colors */
    .form-label {
        color: white;
    }

    /* Black Divider */
    .divider {
        width: 2px;
        background-color: black;
        height: 80px;
        margin: auto;
    }

    /* Login Button */
    .btn-custom {
        background-color: #7886C7 !important;
        color: white;
        border: none;
        padding: 10px 30px;
        border-radius: 5px;
        display: block;
        margin: 20px auto 0;
    }

    .btn-custom:hover {
        background-color: #5F72A1 !important;
    }
</style>

<!-- Main Container -->
<div class="container-box">
    <!-- Login Container (Styled like Register) -->
    <div class="login-container">
        <div class="login-badge">Login</div>
    </div>

    <!-- List IT Header -->
    <div class="header">List IT</div>

    <!-- Form -->
    <form id="account" method="post">
        <div class="row justify-content-center align-items-center">
            <!-- Left Side - Email -->
            <div class="col-md-5">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <!-- Divider -->
            <div class="col-md-2 text-center">
                <div class="divider"></div>
            </div>

            <!-- Right Side - Password -->
            <div class="col-md-5">
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
        </div>

        <!-- Centered Login Button -->
        <div class="text-center mt-3">
            <button id="login-submit" type="submit" class="btn btn-custom">Log in</button>
        </div>

        <!-- Links -->
        <div class="text-center mt-3">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
